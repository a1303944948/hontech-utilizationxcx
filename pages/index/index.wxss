/**index.wxss**/
.index_home{
  width: 100%;
  height: auto;
}
.index_head{
  width: calc(100% - 40rpx);
  height: 70rpx;
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: #ffffff;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
}
.index_head_picker{
  width: 120rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  border: 1rpx #294EAB solid;
  border-radius: 6rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
  float: left;
}
