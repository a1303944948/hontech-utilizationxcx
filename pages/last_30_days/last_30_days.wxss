/* pages/last_30_days/last_30_days.wxss */
.last_home{
  width: 100%;
  height: auto;
}
.last_head{
  width: calc(100% - 40rpx);
  height: 69rpx;
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-bottom: 1rpx #e5e5e5 solid;
  background-color: #ffffff;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 99;
}
.last_heads{
  width: 100%;
  height: 90rpx;
}
.index_head_picker{
  width: 120rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  border: 1rpx #294EAB solid;
  border-radius: 6rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
  float: left;
}
.index_head_picker_type{
  width: 166rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  border: 1rpx #294EAB solid;
  border-radius: 6rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
  float: left;
}
.index_head_picker_time{
  width: 166rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  border: 1rpx #294EAB solid;
  border-radius: 6rpx;
  box-sizing: border-box;
  float: left;
}
.index_head_btn{
  width: 100rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  color: #ffffff;
  background-color: #294EAB;
  padding: 0rpx;
  float: right;
}
.last_body{
  width: 100%;
  height: auto;
}
.last_body_list{
  width: 100%;
  height: 120rpx;
  border-bottom: 1rpx #e5e5e5 solid;
  position: relative;
}
.last_body_list_left{
  height: 120rpx;
  line-height: 120rpx;
  margin-left: 30rpx;
  font-size: 32rpx;
  float: left;
}
.last_body_list_left_son{
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background-color: #667788;
  border-radius: 50%;
  margin-right: 30rpx;
}
.last_body_list_center{
  height: 120rpx;
  line-height: 120rpx;
  margin-right: 40rpx;
  font-size: 38rpx;
  color: rgb(250,84,84);
  float: right;
}
.last_body_list_right{
  height: 120rpx;
  margin-right: 30rpx;
  float: right;
}
.last_body_list_right_son{
  display: inline-block;
  width: 78rpx;
  height: 38rpx;
  line-height: 38rpx;
  margin-top: 41rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ffffff;
  border-radius: 8rpx;
}