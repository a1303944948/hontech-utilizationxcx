/* pages/record/record.wxss */
.record_home{
  width: 100%;
  height: auto;
}
.record_head{
  width: calc(100% - 40rpx);
  height: 69rpx;
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-bottom: 1rpx #e5e5e5 solid;
  background-color: #ffffff;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 99;
}
.record_heads{
  width: 100%;
  height: 90rpx;
}
.index_head_picker{
  width: 120rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  border: 1rpx #294EAB solid;
  border-radius: 6rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
  float: left;
}
.index_head_picker_type{
  width: 166rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  border: 1rpx #294EAB solid;
  border-radius: 6rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
  float: left;
}
.index_head_picker_time{
  width: 166rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  border: 1rpx #294EAB solid;
  border-radius: 6rpx;
  box-sizing: border-box;
  float: left;
}
.index_head_btn{
  width: 100rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  color: #ffffff;
  background-color: #294EAB;
  padding: 0rpx;
  float: right;
}
.record_body{
  width: 100%;
  height: auto;
}
.record_body_list{
  width: 100%;
  height: 72rpx;
  border-bottom: 1rpx #e5e5e5 solid;
  position: relative;
}
.record_body_list_item{
  height: 100%;
  line-height: 72rpx;
  text-align: center;
  border-right: 1rpx #e5e5e5 solid;
  box-sizing: border-box;
  font-size: 28rpx;
  float: left;
}
.record_body_list_item:nth-child(1){
  width: 20%;
}
.record_body_list_item:nth-child(2){
  width: 30%;
}
.record_body_list_item:nth-child(3){
  width: 20%;
}
.record_body_list_item:nth-child(4){
  width: 30%;
}